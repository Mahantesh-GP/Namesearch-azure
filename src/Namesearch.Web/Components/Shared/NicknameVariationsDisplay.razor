@if (Variations != null && Variations.Any())
{
    <div class="nickname-variations">
        <div class="variations-header">
            <svg class="ai-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
            <span class="variations-title">AI-Enhanced Search</span>
        </div>
        <div class="variations-content">
            <p class="variations-description">
                Searching for <strong>@OriginalQuery</strong> and variations:
            </p>
            <div class="variations-list">
                @foreach (var variation in Variations)
                {
                    <span class="variation-tag">@variation</span>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<string> Variations { get; set; } = new();

    [Parameter]
    public string OriginalQuery { get; set; } = string.Empty;
}
